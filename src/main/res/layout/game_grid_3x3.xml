<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:id="@+id/game_grid_3x3">

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/controls"
        android:text="Â¡Go!"
        android:id="@+id/controls"
        android:onClick="moveZowi"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@color/black"
        android:id="@+id/game_grid">

        <View
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/cell_margin"/>

        <FrameLayout
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/white">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/casa_destino"
                android:scaleX="0.7"
                android:scaleY="0.7"/>
        </FrameLayout>

        <View
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/cell_margin"/>

        <View
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/cell_margin"/>

        <View
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/white"/>

        <View
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/cell_margin"/>

        <View
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/cell_margin"/>

        <View
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/cell_margin"/>

        <View
            android:layout_width="@dimen/cell_side"
            android:layout_height="@dimen/cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/cell_margin"/>

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="7"
        android:background="@color/black"
        android:id="@+id/movements_grid">

        <View
            android:layout_width="@dimen/movement_cell_side"
            android:layout_height="@dimen/movement_cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/movement_cell_margin"/>

        <View
            android:layout_width="@dimen/movement_cell_side"
            android:layout_height="@dimen/movement_cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/movement_cell_margin"/>

        <View
            android:layout_width="@dimen/movement_cell_side"
            android:layout_height="@dimen/movement_cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/movement_cell_margin"/>

        <View
            android:layout_width="@dimen/movement_cell_side"
            android:layout_height="@dimen/movement_cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/movement_cell_margin"/>

        <View
            android:layout_width="@dimen/movement_cell_side"
            android:layout_height="@dimen/movement_cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/movement_cell_margin"/>

        <View
            android:layout_width="@dimen/movement_cell_side"
            android:layout_height="@dimen/movement_cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/movement_cell_margin"/>

        <View
            android:layout_width="@dimen/movement_cell_side"
            android:layout_height="@dimen/movement_cell_side"
            android:gravity="center"
            android:background="@color/white"
            android:layout_margin="@dimen/movement_cell_margin"/>

    </GridLayout>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/paper_bin"
        android:id="@+id/paper_bin"
        android:onClick="deleteMovement"/>

</LinearLayout>